{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "outDir": "build",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@jsx/*": ["./src/lib/jsx/*"],
      "@jsx": ["./src/lib/jsx/index"],
      "@reactive": ["./src/lib/reactive/index"],
      "@components": ["./src/lib/components/index"],
      "@statements": ["./src/lib/statements"],
      "@routing": ["./src/lib/routing"],
      "@common": ["./src/lib/common"],
      "@state-manager": ["./src/lib/state-manager"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "@jsx"
  },
  "include": ["src", "jsx"]
}
